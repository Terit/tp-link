<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Smartplug</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      * {
        font-family: Arial, Helvetica, sans-serif
      }

      body {
        display: flex;
        justify-content: center;
        height: 100vh;
        align-items: center;        
        background: #9e9e9e;
        margin: 0;
        padding: 0;
      }

      h1 {
        text-decoration: underline;
      }

      ul {
        list-style: none;
      }
      
      li {
        display: flex;
        align-items: center;
      }

      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #333;
        border-radius: 5px;
        min-height: 25vh;
        background: #eee;
      }

      .status {
        display: inline-block;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        background: #333;
        border: 1px solid grey;
        margin: 0 2rem;
      }

      .status:focus {
        outline: none;
      }

      .status--on {
        background: palegreen;
        border: 1px solid green;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>PLUGS</h1>
      <ul>
        <li><%= info.sysInfo.alias %> - <%= info.sysInfo.model %> <button ip=<%= info.ip %> class="status <%= info.state ? 'status--on' : '' %>"></button></li>
      </ul>
    </div>
    <script>
      function toggleState (evt) {
        const ip = evt.currentTarget.getAttribute('ip')
        fetch(`/ip/${ip}`).then(response => response.json().then(json => {
          const light = document.querySelector(`.status[ip="${json.ip}"]`)
          light.classList = json.state ? 'status status--on' : 'status'
        }));
      }
      document.querySelector('.status').addEventListener('click', toggleState);
    </script>
  </body>
</html>